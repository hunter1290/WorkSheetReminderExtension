{
    "manifest_version": 3,
    "name": "Hourly Reminder Logger",
    "version": "1.0",
    "description": "Reminds you every hour to log your activities and allows you to download the log.",
    "permissions": ["notifications", "storage","alarms"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    }
  }
  